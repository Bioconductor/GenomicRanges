    ## Generics defined in IRanges:
    elementMetadata, "elementMetadata<-",
    mcols, "mcols<-",
    values, "values<-",
    seqselect, "seqselect<-",
    splitAsListReturnedClass,
    width, "start<-", "width<-", "end<-",
